<% content_for :title, "Pages" %>

<div class="mb-10 flex justify-between items-center">
  <h1 class="font-bold text-4xl">Pages</h1>
  <%= link_to "New page", new_page_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>

<%= render "search_form" %>

<%= turbo_frame_tag :pages, data: { turbo_action: "advance" } do %>
  <ul id="pages" class="mt-10 space-y-3">
    <%= render collection: @pages, partial: "page_list", as: :page %>
  </ul>
<% end %>
