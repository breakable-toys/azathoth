<div class="mb-10 flex justify-between items-center">
  <h1 class="font-bold text-4xl">Editing page</h1>
  <div>
    <%= link_to "Show this page", @page, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to pages", pages_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

<%= render "form", page: @page %>

<%= turbo_frame_tag dom_id(Embed.new), class: "mt-10 block" %>

<%= turbo_frame_tag :search_form do %>
  <%= render partial: "search_form", locals: { page_id: @page.id } %>
<% end %>

<%= turbo_frame_tag :pages %>
